{
  "version": 2,
  "builds": [
    {
      "src": "backend/src/api/server.ts",
      "use": "@vercel/node"
    },
    {
      "src": "public/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "backend/src/api/$1" },
    { "src": "/(.*)", "dest": "/public/$1" }
  ]
}
